@model MVC_SchoolProject.Models.ChargeClassModel

@{
    ViewData["Title"] = "Charge Class";
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewData["Title"]</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">
</head>
<body>
    <div class="container mt-5">
        <h2 class="text-center">@ViewData["Title"]</h2>
        <div class="row justify-content-center">
            <div class="col-md-6">
                <div class="card">
                    <div class="card-header">
                        Enter Class Details
                    </div>
                    <div class="card-body">
                        @if (TempData["ErrorMessage"] != null)
                        {
                            <div class="alert alert-danger">@TempData["ErrorMessage"]</div>
                        }
                        <form asp-controller="Admin" asp-action="AddAmountClass" method="post">
                            <div class="form-group">
                                <label asp-for="className">Class</label>
                                <input type="text" class="form-control" id="className" name="className" />
                            </div>
                            <div class="form-group">
                                <label asp-for="Amount">Amount</label>
                                <input type="number" class="form-control" id="Amount" name="Amount" step="0.01" />
                            </div>
                            <button type="submit" class="btn btn-primary">Add Amount</button>
                            <a href="@Url.Action("AdminView", "Admin")" class="btn btn-secondary">Back</a>
                        </form>

                        <div>
                            @if (!ViewData.ModelState.IsValid)
                            {
                                <div class="alert alert-danger">
                                    <ul>
                                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                                        {
                                            <li>@error.ErrorMessage</li>
                                        }
                                    </ul>
                                </div>
                            }
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>
</body>
</html>
